rel8()
{
	local target=$(resolve $1)
	local delta=

	if [ $((target)) -gt $OFFSET ]
	then
		delta=$((target - OFFSET - 1))
	else
		delta=$((-(OFFSET - target + 1)))
	fi

	u8 $((delta & 0xff))
}

rel32()
{
	local target=$(resolve $1)
	local delta=

	if [ $((target)) -gt $OFFSET ]
	then
		delta=$((target - OFFSET - 4))
	else
		delta=$((-(OFFSET - target + 4)))
	fi

	u32 $((delta & 0xffffffff))
}

MACROS="rel8 rel32 $MACROS"
